<?xml version="1.0" encoding="UTF-8"?>
<persistence
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	version="2.1">
	<persistence-unit name="demo.ejb">
		<jta-data-source>jdbc/built-in-derby-datasource</jta-data-source>
		<class>com.dw.demo.entities.Student</class>
		<properties>
			<property name="javax.persistence.schema-generation.database.action" value="create"/>
		</properties>
	</persistence-unit>
</persistence>